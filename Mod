<script>
    const obtener1 = document.getElementById('obtener1');
    const obtener2 = document.getElementById('obtener2');
    const timer = document.getElementById('timer');
    const timer2 = document.getElementById('timer2');
    const mensaje = document.getElementById('mensaje');
    const final = document.getElementById('final');
    const banner = document.getElementById('banner');
    const bar1 = document.getElementById('bar1');
    const bar2 = document.getElementById('bar2');
    const progress1 = document.getElementById('progress1');
    const progress2 = document.getElementById('progress2');

    // Animación tipo spamer del banner
    const mensajes = [
        "🔥 Nuevo Mod Annelids disponible 🔥",
        "💥 Actualización 4.0 por Zheng 💥",
        "🎯 Mods optimizados con armas extra 🎯",
        "⚙️ Compatible con Emulador Shukizy ⚙️"
    ];
    let index = 0;
    setInterval(() => {
        index = (index + 1) % mensajes.length;
        banner.textContent = mensajes[index];
    }, 4000);

    // Primer botón
    obtener1.onclick = () => {
        obtener1.classList.add('hidden');
        timer.classList.remove('hidden');
        progress1.classList.remove('hidden');
        let count = 50;
        const total = 50;
        const interval = setInterval(() => {
            timer.textContent = `Espere ${count}s...`;
            let progress = ((total - count) / total) * 100;
            bar1.style.width = progress + "%";
            count--;
            if (count < 0) {
                clearInterval(interval);
                timer.classList.add('hidden');
                progress1.classList.add('hidden');
                obtener2.classList.remove('hidden');
            }
        }, 1000);
    };

    // Segundo botón
    obtener2.onclick = () => {
        obtener2.classList.add('hidden');
        timer2.classList.remove('hidden');
        progress2.classList.remove('hidden');
        let count2 = 15;
        const total2 = 15;
        mensaje.classList.remove('hidden');
        const interval2 = setInterval(() => {
            timer2.textContent = `Espere ${count2}s...`;
            let progress = ((total2 - count2) / total2) * 100;
            bar2.style.width = progress + "%";
            count2--;
            if (count2 < 0) {
                clearInterval(interval2);
                timer2.classList.add('hidden');
                progress2.classList.add('hidden');
                mensaje.classList.add('hidden');
                final.classList.remove('hidden');
            }
        }, 1000);
    };
</script>

